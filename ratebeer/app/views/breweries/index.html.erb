<h1>Listing breweries</h1>
<%= link_to 'list of beers', beers_path %>

<p> Number of breweries: <%= @breweries.count %> </p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
        <td><abbr title="Remove"><%= link_to 'X', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></abbr></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brewery', new_brewery_path %>
